{
  "manifest_version": 3,
  "name": "AI Dark Pattern Detector",
  "version": "1.0",
  "description": "Detects deceptive UI dark patterns using on-device AI",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
